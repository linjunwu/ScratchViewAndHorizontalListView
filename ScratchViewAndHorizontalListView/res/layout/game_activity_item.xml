<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_game_activity_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher"/>
    <TextView
        android:id="@+id/tv_game_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_game_activity_icon"
        android:layout_centerHorizontal="true"
        android:text="@string/game_activity_title_1"/>
    <Button
        android:id="@+id/bt_game_activity_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_game_activity_title"
        android:layout_centerHorizontal="true"
        android:text="@string/game_activity_action"/>
</RelativeLayout>